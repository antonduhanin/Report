<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.ReportsEntity" table="reports" schema="mydb">
        <id name="activity">
            <column name="Activity" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="startDate">
            <column name="StartDate" sql-type="date" not-null="true"/>
        </property>
        <property name="endDate">
            <column name="EndDate" sql-type="date" not-null="true"/>
        </property>
        <property name="performer">
            <column name="Performer" sql-type="varchar(45)" length="45"/>
        </property>
    </class>



</hibernate-mapping>